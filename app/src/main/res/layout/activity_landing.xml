<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="id.kelongmakassar.kelongmakassar.ui.LandingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/image_show_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_help"
        android:contentDescription="A short description about this application."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                style="@style/MyButton"
                android:id="@+id/button_toggle_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_menu" />

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <Button
                    style="@style/MyButton"
                    android:id="@+id/button_kelong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_kelong" />

                <Button
                    style="@style/MyButton"
                    android:id="@+id/button_tutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_tutorial" />

                <Button
                    style="@style/MyButton"
                    android:id="@+id/button_games"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_games" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_help"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#D0D2D1"
            android:padding="4dp"
            android:text="Kelong makassar adalah..."/>
    </RelativeLayout>
</LinearLayout>
